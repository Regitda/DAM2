<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" style="-fx-padding: 25;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.project2.project2.Controllers.LoginUIController">
	<Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
	<TextField fx:id="usernameField" promptText="Unique ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

	<Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

	<HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
		<Button onAction="#handleLoginAction" text="Iniciar sesión" />
		<Button onAction="#handleRegisterAction" text="Registrar" />
	</HBox>

	<Label fx:id="statusLabel" textFill="red" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
